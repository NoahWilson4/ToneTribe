extends layout

block content
	div.container.profile-top(style="")
		div.img-name.row
			div.name-loc.col-xs-6.col-sm-6.c0l-md-7.col-xl-5
				h2.name(title="name") Live Stream
				div.location(title="location") The Creative Playground
			div.profile-pic.img-circle.col-xs-4(style="")
	.container
		.info-block(title="about")
			.row
				.heading-container.col-sm-4.col-md-2
					h2.heading-about Live Stream:
				.content-container.col-sm-8.col-md-10
					p.about Here's what's happening in the ToneTribe universe.
	.container
		.row
			div.col-sm-5.col-md-4#sidebar
				//- .profile-sidebar
					.sidebar-list
						button.btn.btn-default.btn-sm.btn-songs Create New Song
				.profile-sidebar
					h2 Something can go here:
					.sidebar-list
						p.sidebar-list-text sorting maybe?
						p.sidebar-list-text or a song of the week?
					

			.col-sm-7.col-md-8
				.info-block.remove-margin
					button#dropNote.drop-note.btn-simple-sm.pull-left Drop a Note
					h1.heading-about Posts
					form#addPost(role="form")
						.form-group
							textarea.form-control.form-font(type="text" id="post" placeholder="Postâ€¦")
						.form-group
							input.btn.btn-simple-sm.btn-post(type="submit" value="Post")
					#post-container


	script(id="post-template" type="text/x-handlebars-template").
		<div class="list-group results">
			<div class="post-container">
				<div class="post-pic-holder">
					<a href="../profile/?id={{user._id}}"><img class="post-profile-pic img-circle" src={{userProfilePic}}></a>
				</div>
					<a href="../profile/?id={{user._id}}"><h2 class="post-heading"> {{userName}} </h4></a>
					<p class="post-secondary"> {{date}} </p>
				<p id="post-text" class="list-group-item-text post-text"> {{text}} </p>
					<button class="btn btn-xs btn-default">
						<i class="fa fa-thumbs-o-up"></i>
						<div id="postInfo" value="{{songId}}"></div>
					</button>
					<div class="post-secondary inline"> {{likes}} Likes </div>
							
			</div>
		</div>
	script(id="cocreation-template" type="text/x-handlebars-template").
		<div class="list-group results">
			<div class="post-container">
				<div class="cocreation-likes pull-right">{{likes}} Likes</div>
				<div class="cocreation-pic-holder">
					<a href="../song/?id={{_id}}"><img class="cocreation-profile-pic img-circle" src={{backgroundImage}}></a>
					<a href="../song/?id={{_id}}">
						<div class="cocreation-heading">
							<h2 class="post-heading"> {{name}} </h4></a>
							<p id="post-text" class="list-group-item-text post-text"> space holding for description{{description}} </p>
						</div>
				</div>
				<h2>CoCreators</h2>
				{{#each users}}
					<div class="cocreation-user-container">
						<a href="../profile/?id={{_id}}">
							<img class="cocreation-user-pic img-circle" src={{profilePic}}>
							<h3 class="cocreation-user-name">{{name}}</h3>
						</a>
					</div>
				{{/each}}	
	
			</div>
		</div>
	script.
		var user = !{JSON.stringify(user)};
	script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")
	script(script src="../scripts/lib/liveStream.js")