extends layout

block content
	.heading-signup-form
		h1 Welcome to ToneTribe!
		p Please fill in some info about yourself and we'll get you started.
	.profile-sidebar.signup2-content
		h3 user.name
		.sidebar-list
			h4.sidebar-list-heading(title="bands") Bands:
			p.signup2-text-box.sidebar-list-text.bands.editing-profile(name="bands")
		.sidebar-list
			h4.sidebar-list-heading Instruments:
			p.signup2-text-box.sidebar-list-text.instruments.editing-profile(name="instruments")
		.sidebar-list
			h4.sidebar-list-heading Styles:
			p.signup2-text-box.sidebar-list-text.styles.editing-profile(name="styles")
		.sidebar-list
			h4.sidebar-list-heading Skills:
			p.signup2-text-box.sidebar-list-text.skills.editing-profile(name="skills")
		.sidebar-list
			h4.sidebar-list-heading Inspired By:
			p.signup2-text-box.sidebar-list-text.inspirations.editing-profile(name="inspirations")
		.sidebar-list
			h4.sidebar-list-heading Improvisational/Compositional Orientation:
			.improvCompNumbers Improv = 
				span: strong#improv 50
				span % / 
				span: strong#comp 50
				span % = Comp
			.range-container
				dl.ratio-graph-signup
							dd
								div#ratio-bar-signup.bar-signup(style="width: 50%") ratio
								div#ratio-bar-signup2.bar-signup2(style="width: 50%") ratio
				input.form-control.searchInput(type="range" min="0" max="100" value="" step="1" id="improvCompRange" onchange="getRangeValue(this.value)")
		form#form-signup2(method="post" action="/updateUser")
			input#id(type="hidden" value=id name="id")
			a(href="/signup"): button.btn.btn-success Previous
			input#signup2-submit.btn.btn-success.pull-right(type="submit" value="Next")
			
						

	script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")
	script(script src="../scripts/lib/signup.js")